[Unit]
Description=Mail Server Stack
Requires=docker.service podman.service
After=docker.service podman.service network.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/email-server
ExecStart=/usr/bin/podman-compose up -d
ExecStop=/usr/bin/podman-compose down
User=mailadmin
Group=mailadmin

[Install]
WantedBy=multi-user.target