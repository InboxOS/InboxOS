{% extends 'base.html.twig' %}

{% block title %}Mail Logs{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Mail Logs</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Timestamp</th>
            <th>Type</th>
            <th>Sender</th>
            <th>Recipient</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.timestamp ? log.timestamp|date('Y-m-d H:i:s') : '-' }}</td>
                <td>{{ log.type }}</td>
                <td>{{ log.sender ?? '-' }}</td>
                <td>{{ log.recipient ?? '-' }}</td>
                <td>{{ log.status ?? '-' }}</td>
            </tr>
        {% else %}
            <tr><td colspan="5">No logs found.</td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

