# Environment
APP_ENV=prod
APP_SECRET=${APP_SECRET}
APP_URL=https://${DOMAIN}

# Database
DATABASE_URL="mysql://mailadmin:${MYSQL_PASSWORD}@mysql:3306/mail_dashboard?serverVersion=8.0&charset=utf8mb4"

# Mailer
MAILER_DSN=smtp://mailserver:587
MAILER_FROM=no-reply@${DOMAIN}

# Redis
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Mail Server
MAIL_SERVER_HOST=mailserver
MAIL_SERVER_PORT=25
HORDE_URL=https://webmail.${DOMAIN}

# Paths
MAIL_SERVER_CONFIG_PATH=/var/mailserver/config
CERTIFICATE_PATH=/etc/letsencrypt

# Security
TRUSTED_PROXIES=127.0.0.1,nginx
TRUSTED_HOSTS='^${DOMAIN}|webmail\.${DOMAIN}$'
CORS_ALLOW_ORIGIN='^https?://(localhost|${DOMAIN}|webmail\.${DOMAIN})(:[0-9]+)?$'

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=info