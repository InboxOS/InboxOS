# docker-mailserver environment configuration

# General
ONE_DIR=1
DMS_DEBUG=0

# SSL/TLS
SSL_TYPE=letsencrypt
SSL_DOMAIN=${DOMAIN}
TLS_LEVEL=modern

# Security
ENABLE_FAIL2BAN=1
ENABLE_SPAMASSASSIN=1
ENABLE_CLAMAV=1
ENABLE_POSTGREY=1
SA_TAG=2.0
SA_TAG2=6.31
SA_KILL=6.31
SPAMASSASSIN_SPAM_TO_INBOX=0

# Authentication
ENABLE_SASLAUTHD=0
SASLAUTHD_MECHANISMS=pam
SASLAUTHD_MECH_OPTIONS=""

# DKIM
DKIM_SELECTOR=mail
DKIM_KEY_SIZE=2048

# Dovecot
DOVECOT_TLS=yes
DOVECOT_SSL=yes
ENABLE_QUOTAS=yes
DOVECOT_MAILBOX_FORMAT=maildir

# Postfix
POSTFIX_MESSAGE_SIZE_LIMIT=26214400
POSTFIX_MAILBOX_SIZE_LIMIT=0
POSTFIX_SMTPD_TLS_SECURITY_LEVEL=may
POSTFIX_SMTP_TLS_SECURITY_LEVEL=may

# Sieve
ENABLE_MANAGESIEVE=yes
SIEVE_MAXSCRIPTSIZE=1M

# Reporting
REPORT_RECIPIENT=${ADMIN_EMAIL}
REPORT_SENDER=${ADMIN_EMAIL}